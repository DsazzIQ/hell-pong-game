{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "paths": {
      "@hell-pong/shared/*": ["../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
