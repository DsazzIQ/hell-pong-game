{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "noEmit": false,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "target": "es2021",
    "paths": {
      "@hell-pong/shared/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules/**", "node_modules", "dist"]
}
