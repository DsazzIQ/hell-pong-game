{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021", "dom", "dom.iterable"],
    "paths": {
      "@hell-pong/shared/*": ["../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/index.html",
    "webpack.config.js",
    "dist"
  ]
}
